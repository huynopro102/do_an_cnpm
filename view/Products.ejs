    <!-- Nhúng JavaScript -->
    <script>
        // JavaScript function to reset filters
        function resetFilters() {
            document
                .querySelectorAll('input[name="category"]')
                .forEach((checkbox) => {
                    checkbox.checked = false;
                });
            document
                .querySelectorAll('input[name="price"]')
                .forEach((radio) => {
                    radio.checked = false;
                });
            document.querySelector(
                'input[name="price"][value="0"]'
            ).checked = true;
            // Add more reset logic for other filters if needed
        }
